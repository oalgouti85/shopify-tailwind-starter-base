{% comment %}
This file is auto-generated by Foxify.
This file can be re-written at any time. Please do not update this file directly.
{% endcomment %}
{%- liquid
  assign locales = shop.metafields.foxify.locales.value
  assign current_locale = request.locale.iso_code
  assign primary_locale = current_locale
  for locale in shop.published_locales
    if locale.primary
      assign primary_locale = locale.iso_code
      break
    endif
  endfor
  assign translation = locales[current_locale] | default: locales[primary_locale]

  assign SHORT_ID_KEY = 'f'
  assign theme_settings = shop.metafields.foxify.theme_settings.value

  assign selected_variant = product.selected_or_first_available_variant
  if use_variant
    assign target = selected_variant
  else
    assign target = product
  endif

  assign compare_at_price = target.compare_at_price
  assign price = target.price | default: 1999
  assign available = target.available | default: false
  assign money_price = price | money
  if theme_settings.showCurrencyCode
    assign money_price = price | money_with_currency
  endif
  if target == product and product.price_varies
    assign money_price = translation.products.product.price.from_price_html | replace: '{{ price }}', money_price
  endif
-%}

<div class="{{ SHORT_ID_KEY }}:price
  {%- if alignment %} {{ SHORT_ID_KEY }}:price--{{ alignment }}{% endif -%}
  {%- if price_class %} {{ price_class }}{% endif -%}
  {%- if available == false %} {{ SHORT_ID_KEY }}:price--sold-out {% endif -%}
  {%- if compare_at_price > price %} {{ SHORT_ID_KEY }}:price--on-sale {% endif -%}
  {%- if product.price_varies == false and product.compare_at_price_varies %} {{ SHORT_ID_KEY }}:price--no-compare{% endif -%}">
  {%- comment -%}
      Explanation of description list:
        - div.price__regular: Displayed when there are no variants on sale
        - div.price__sale: Displayed when a variant is a sale
    {%- endcomment -%}
  <div class="{{ SHORT_ID_KEY }}:price__regular">
    <span class="{{ SHORT_ID_KEY }}:visually-hidden {{ SHORT_ID_KEY }}:visually-hidden--inline">{{ translation.products.product.price.regular_price }}</span>
    <span class="{{ SHORT_ID_KEY }}:price-item {{ SHORT_ID_KEY }}:price-item--regular">
        {{ money_price }}
      </span>
  </div>
  <div class="{{ SHORT_ID_KEY }}:price__sale">
    <span class="{{ SHORT_ID_KEY }}:visually-hidden {{ SHORT_ID_KEY }}:visually-hidden--inline">{{ translation.products.product.price.sale_price }}</span>
    <span class="{{ SHORT_ID_KEY }}:price-item {{ SHORT_ID_KEY }}:price-item--sale">
        {{ money_price }}
      </span>
    {%- unless product.price_varies == false and product.compare_at_price_varies %}
      <span class="{{ SHORT_ID_KEY }}:visually-hidden {{ SHORT_ID_KEY }}:visually-hidden--inline">{{ translation.products.product.price.regular_price }}</span>
      <span>
          <s class="{{ SHORT_ID_KEY }}:price-item {{ SHORT_ID_KEY }}:price-item--regular">
            {% if theme_settings.showCurrencyCode %}
              {{ compare_at_price | money_with_currency }}
            {% else %}
              {{ compare_at_price | money }}
            {% endif %}
          </s>
        </span>
    {%- endunless -%}
  </div>
  <div class="{{ SHORT_ID_KEY }}:price__unit-wrapper{% if selected_variant.unit_price_measurement == nil %} {{ SHORT_ID_KEY }}:hidden{% endif %}">
    <span class="{{ SHORT_ID_KEY }}:visually-hidden">{{ translation.products.product.price.unit_price }}</span>
    <div class="{{ SHORT_ID_KEY }}:price__unit">
      {%- capture unit_price_separator -%}
        <span aria-hidden="true">/</span><span class="{{ SHORT_ID_KEY }}:visually-hidden">{{ translation.products.product.price.unit_price_separator }}&nbsp;</span>
      {%- endcapture -%}
      {%- capture unit_price_base_unit -%}
        <span data-unit-price-base-unit>
            {%- if selected_variant.unit_price_measurement -%}
              {%- if selected_variant.unit_price_measurement.reference_value != 1 -%}
                {{- selected_variant.unit_price_measurement.reference_value -}}
              {%- endif -%}
              {{ selected_variant.unit_price_measurement.reference_unit }}
            {%- endif -%}
          </span>
      {%- endcapture -%}
      <span data-unit-price>{{ selected_variant.unit_price | money }}</span>{{- unit_price_separator -}}{{- unit_price_base_unit -}}
    </div>
  </div>

  {% if show_sale_badge or show_soldout_badge %}
    <div class="{{ SHORT_ID_KEY }}:price__badges">
      {% if show_sale_badge %}
        {% liquid
          assign sale_badge = ''
          assign amount = 0
          case sale_badge_type
            when 'percentage'
              if compare_at_price > price
                assign amount = compare_at_price | minus: price | times: 100 | divided_by: compare_at_price | append: '%'
              endif
              assign sale_badge = translation.products.product.price.save_price_html | replace: '{{ amount }}', amount
            when 'fixed_amount'
              if compare_at_price > price
                assign amount = compare_at_price | minus: price | money
              endif
              assign sale_badge = translation.products.product.price.save_price_html | replace: '{{ amount }}', amount
            else
              assign sale_badge = translation.products.product.on_sale
          endcase
        %}
        <div class="{{ SHORT_ID_KEY }}:price__badge-sale" data-type="{{ sale_badge_type }}">
          <span class="{{ SHORT_ID_KEY }}:badge {{ SHORT_ID_KEY }}:badge--sale">{{ sale_badge }}</span>
        </div>
      {% endif %}
      {% if show_soldout_badge %}
        <div class="{{ SHORT_ID_KEY }}:price__badge-sold-out">
          <span class="{{ SHORT_ID_KEY }}:badge {{ SHORT_ID_KEY }}:badge--soldout">{{ translation.products.product.sold_out }}</span>
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>
